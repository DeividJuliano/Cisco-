#configuração de um switch core para ter 3 portas trunk
en 
conf t
hostname CORE1
int range g1/0/1-3
switchport mode trunk
end
wr
sh int trunk


#criando vlans
en
conf t
vlan 10
vlan 20
vlan 99
end
wr
sh vlan
sh int trunk

#criar interfaces vlans com ips
conf t
int vlan 10
ip address 192.168.10.1 255.255.255.0
exit
conf t
int vlan 20
ip address 192.168.20.1 255.255.255.0
exit
conf t
int vlan 99
ip address 172.16.9.1 255.255.255.0
end
wr
sh ip int bri

#habilitar o switch para rotear
conf t
ip routing
end
wr
sh ip route

#macete para deixar a porta como se fosse roteador
en
conf t
int g1/0/24
no switchport  #desabilitar a comutação
ip add 10.10.10.1 255.255.255.252
end
wr

#rota default 
ip route 0.0.0.0 0.0.0.0 10.10.10.2  #qualquer coisa para 10.10.10.2
end
wr

#configuração de redundancia


#configurar para que o switchcore L3 seja eleito root, (prorize sempre o melhor switch para ser root)
en
conf t
spanning-tree vlan 1-1005 priority 0
end
wr

#enganar o spanning-tree e criar uma port-channel, desligue e as interfaces e faça ssa configuração nos 2 switches
en
conf t
interface range g1/0/22-23
shutdown
conf t
interface range g1/0/22-23
channel-group 10 mode active
no shutdown
end
wr
sh int trunk


show spanning-tree
show spanning-tree summary















